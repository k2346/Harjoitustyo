                <Image Tapped="Hair2_1_Tapped" IsTapEnabled="True" Source="Assets/Images/hiukset/tukka3_2.png" x:Name="Hair3_2" Height="100" Width="auto" Margin="5" RelativePanel.Below="Hair2_1" RelativePanel.RightOf="Dress2_1"/>
