    mc:Ignorable="d"
    Width="1000"
    Height="1000"
    >

    <Grid 
        x:Name="MyGrid02"
        Background="Black" Margin="10,10,10,0">
        <Image Source="Assets/Images/Taustakuva_game3.png" Width="auto" Height="auto"
                   HorizontalAlignment="Center" />


        <!--
        <StackPanel HorizontalAlignment="Left" Height="640" Margin="10,70,0,0" VerticalAlignment="Top" Width="425">
