        <Button x:Name="ReturnButton"
                Content="Return"
                Padding="10" 
                FontSize="27" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="ReturnButton_Click" 
                FontFamily="Assets/Fonts/Little Twin Stars.ttf#Little Twin Stars"
                Background="#02000000">

            <Button.BorderBrush>
                <SolidColorBrush Color="{StaticResource Potato_yellow}"/>
            </Button.BorderBrush>

            <Button.Foreground>
                <SolidColorBrush Color="{StaticResource Potato_blue}"/>
            </Button.Foreground>
        </Button>

        <TextBlock x:Name="WardTextBlock" TextWrapping="Wrap" Text="Help Potato to get a stunning outfit!" FontSize="40" FontFamily="Assets/Fonts/Little Twin Stars.ttf#Little Twin Stars" Margin="101,56,340,879">
