                <Image Tapped="Hair2_1_Tapped" IsTapEnabled="True" Source="Assets/Images/hiukset/tukka2.png" x:Name="Hair2_1" Height="100" Width="auto" Margin="5" RelativePanel.Below="Hair1_1"/>
                <Image Tapped="Hair2_1_Tapped" IsTapEnabled="True" Source="Assets/Images/hiukset/tukka2_2.png" x:Name="Hair2_2" Height="100" Width="auto" Margin="5" RelativePanel.Below="Hair1_1" RelativePanel.RightOf="Dress2_1"/>
