                    </TextBlock.Foreground>
                </TextBlock>

                <Image Tapped="Heart_1_Tapped" IsTapEnabled="True" Source="Assets/Images/assat/sydan.png" x:Name="Heart_1" Height="100" Width="auto" Margin="5" RelativePanel.Below="WardTextBlock3"/>
