                <Image Tapped="Dress1_2_Tapped" IsTapEnabled="True" Source="Assets/Images/mekot/mekko1_2.png" x:Name="Dress1_2" Height="100" Width="auto" Margin="5" RelativePanel.RightOf="Dress1_1" RelativePanel.Below="WardTextBlock1"/>
