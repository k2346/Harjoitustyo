                <Image Tapped="Heart_1_Tapped" IsTapEnabled="True"  Source="Assets/Images/assat/sydan_3.png" x:Name="Heart_3" Height="100" Width="auto" Margin="5" RelativePanel.Below="WardTextBlock3" RelativePanel.RightOf="Dress2_2"/>



                <Image Tapped="Crown_1_Tapped" IsTapEnabled="True" Source="Assets/Images/assat/kruunu1.png" x:Name="Crown_1" Height="100" Width="auto" Margin="5" RelativePanel.Below="Heart_1"/>
                <Image  Tapped="Crown_2_Tapped" IsTapEnabled="True" Source="Assets/Images/assat/kruunu2.png" x:Name="Crown_2" Height="100" Width="auto" Margin="5" RelativePanel.Below="Heart_1" RelativePanel.RightOf="Dress2_1"/>

                <Image Tapped="Lips_1_Tapped" IsTapEnabled="True" Source="Assets/Images/assat/suu1.png" x:Name="Acc1_1" Height="100" Width="auto" Margin="5" RelativePanel.Below="Crown_1" RelativePanel.RightOf="Dress2_2"/>
                <Image Tapped="Lips_1_Tapped" IsTapEnabled="True" Source="Assets/Images/assat/suu2.png" x:Name="Acc1_2" Height="100" Width="auto" Margin="5" RelativePanel.Below="Crown_1" RelativePanel.RightOf="Dress2_1"/>
                <Image Tapped="Acc1_3_Tapped" IsTapEnabled="True" Source="Assets/Images/assat/ripset.png" x:Name="Acc1_3" Height="100" Width="auto" Margin="5" RelativePanel.Below="Crown_1"/>


